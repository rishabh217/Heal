<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.prescription.PrescriptionIssueFragment">

    <TextView
        android:id="@+id/issueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="17sp"
        android:textColor="#000"
        android:layout_margin="35dp"
        android:textAlignment="center"
        android:text="Your Prescription seems to have some issues. Please try reuploading the prescription or enter your contact details so that professionals can verify it for you." />

    <Button
        android:id="@+id/uploadAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/issueText"
        android:text="Upload"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/contactUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uploadAgain"
        android:layout_marginTop="30dp"
        android:text="Contact Me"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>